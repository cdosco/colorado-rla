{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "corla/*": ["./src/*"],
        },

        "outDir": "./dist/",
        "sourceMap": true,
        "skipLibCheck": true,

        // Strictness options
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,

        "lib": [
            "dom",
            "es2015.promise",
            "es5",
            "es2015",
            "esnext",
        ],

        "module": "commonjs",
        "target": "es5",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
